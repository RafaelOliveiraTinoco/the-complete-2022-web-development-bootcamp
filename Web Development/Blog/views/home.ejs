<%- include("partials/header") -%>

<h1>Home Page</h1>

<%for(i = 0; i < postList.length; i++){

	%><h1><%= postList[i].title %></h1><%

	if(postList[i].content.length <= 100){

		%><p><%= postList[i].content %></p><%
	}else{

		%><p><%= postList[i].content.substring(0, 100) + "..." %></p><%

	}

	%><a href="/post/<%= postList[i]._id %>">Read more</a><%

}%>

<%- include("partials/footer") -%>
